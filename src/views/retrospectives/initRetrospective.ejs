<section class="dashboard">
  <div class="banner">
    <div class="banner__section">
      <h1 class="title">Iniciar Retrospectiva</h1>
      <p class="description">Registrar una nueva sesiÃ³n de retrospectiva.</p>
    </div>
    <div class="banner__section">
      <a class="button button--primary" href="#">Guardar</a>
    </div>
    <span class="line"></span>
  </div>

  <label class="subtitle">Nombre</label>
  <div class="input-container">
    <label class="input__label" for=""></label>
    <input class="input" type="text" placeholder="Nombre de la Retrospectiva" />
  </div>
  <br />

  <h2 class="subtitle mt-3">Preguntas</h2>
  <p class="description mb-2">
    Selecciona las preguntas que desees incluir o crea preguntas nuevas.
  </p>

  <% if(questions.length> 0) { for(let i=0; i < questions.length; i++) { %>
  <div class="card card--question-checkbox">
    <input type="checkbox" checked="" class="mr-1" />
    <div>
      <label class="subtitle"> <%= questions[i].description %> </label>
      <span class="label label--active"> <%= questions[i].type %> </span>
    </div>
  </div>
  <% } } else { %>
  <p class="description">
    Por el momento no hay preguntas registradas. Empieza a crear las tuyas!
  </p>
  <% } %>
  <div class="buttons-container mt-3">
    <a class="button button--primary" href="#">Guardar</a>
    <a class="button button--edit" href="#">Crear pregunta</a>
    <a class="button button--discard" href="<%=routes.retrospectives %>"
      >Descartar</a
    >
  </div>
</section>
