<!-- HEADER -->
<header class="login__header">
  <img src="/assets/img/logo.svg" alt="RetroZeb Logo" />
</header>
<!-- LOGIN FORM -->
<main class="login__body">
  <h1 class="title">Bienvenido, <%= currentUser.first_name %>
  </h1>
  <p class="description description--blue">
    Por favor ingresa tu ID de usuario de JIRA
  </p>
  <p class="description mt-3">
    1. Accede a tu perfil en JIRA
  </p>
  <p class="description">
    2. Copia tu ID de usuario de la URL en tu perfil
  </p>

  <form action="<%= routes.jiraUserID %>" method="POST" id="jira-user-id" class="jira-user-id-form mt-3">
    <input type="hidden" name="uid" value="<%= currentUser.uid %>">
    <input class="input" type="text" placeholder="ID de Usuario de JIRA" name="id_jira" />
    <button class="button button--primary mt-1 mb-1" type="submit">Guardar</button>
  </form>
  <form action="<%= routes.noJiraUserID %>" method="POST" id="jira-user-id" class="jira-user-id-form">
    <button class="button button--discard mt-0" type="submit">Continuar sin ID</button>
  </form>
</main>

<!-- FOOTER -->
<footer class="login__footer">
  <img src="/assets/img/zebrands-logo.svg" alt="Zebrands Logo" />
</footer>