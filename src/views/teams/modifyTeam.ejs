<section class="dashboard">
  <div class="banner">
    <div class="banner__section">
      <h1 class="title"><%= team.name %></h1>
      <p class="description">Detalles del equipo</p>
    </div>
    <% if(currentPrivileges.includes(privileges.teams.canDeleteTeams)) { %>
      <div>
      <span class="meta mb-3">Eliminar equipo <%=team.name %></span>
      <form method="POST" action="/equipos/eliminar" id="formE">
        <input type="hidden" name="id_team" value="<%=team.id %>">
        <button class="button button--delete-alt" type="submit">Eliminar Equipo</button>
      </form>
    </div>
      <% } %>
    <span class="line"></span>
  </div>

  <h2 class="subtitle subtitle--blue">Miembros del equipo <span class="meta">(<%= members.length%>)</span></h2>
  <% if(members && members.length > 0) { %>
  <div class="banner--nomargin">
    <div class="table-container">
      <table class="table">
        <thead>
          <tr class="subtitle">
            <td>Nombre</td>
            <td>Email</td>
            <td></td>
          </tr>
        </thead>
        <tbody>
          <% for(let i=0; i < members.length; i++) { %>
          <tr>
            <td class="table__title">
              <%= members[i].first_name %> <%= members[i].last_name %>
              <% if(members[i].uid == currentUser.uid) { %>
              <span class="meta"> (Tú)</span>
              <% } %>
            </td>
            <td class="description"><%= members[i].email %></td>
            <td class="table__team" data-idTeam="<%= members[i].uid %>">
              <form method="POST" action="/equipos/modificar/eliminar" id="form" class="form-action-button">
                <input type="hidden" name="id_team" value="<%= team.id %>" />
                <input type="hidden" name="uid" value="<%= members[i].uid %>" />
                <% if(members[i].uid !== currentUser.uid) { %>
                <button type="submit" class="button button--sm button--delete-alt">
                  Eliminar
                </button>
                <% } %>
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <% } %>

  <h2 class="subtitle subtitle--blue mt-4">Personas</h2>
  <% if(!usersNotInTeam || usersNotInTeam.length == 0) { %>
  <p class="meta">No hay más usuarios para añadir</p>
  <% } %>
  <% if(usersNotInTeam && usersNotInTeam.length > 0) { %>
  <h2 class="meta mt-0 mb-3">Selecciona usuarios para añadir</h2>
  <div class="input search-bar">
    <span class="icon search-bar__icon"></span>
    <input type="text" placeholder="Buscar por título" id="buscar" />
  </div>
  <div class="banner--nomargin mt-3">
    <div class="table-container">
      <table class="table" id="users-container">
        <thead>
          <tr class="subtitle">
            <td>Nombre</td>
            <td>Email</td>
            <td></td>
          </tr>
        </thead>
        <tbody>
          <% for(let i=0; i < usersNotInTeam.length; i++) { %>
          <tr>
            <td class="table__title">
              <%= usersNotInTeam[i].first_name %> <%= usersNotInTeam[i].last_name %>
            </td>
            <td class="description"><%= usersNotInTeam[i].email %></td>
            <td class="table__team" data-idTeam="<%= usersNotInTeam[i].uid %>">
              <form method="POST" action="/equipos/modificar/anadir" id="form" class="form-action-button">
                <input type="hidden" name="id_team" value="<%= team.id %>" />
                <input type="hidden" name="uid" value="<%= usersNotInTeam[i].uid %>" />
                <button type="submit" class="button button--sm button--edit">
                  Añadir
                </button>
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <p class="no-results mt-4 hide"></p>
    </div>
  </div>
  <% } %>

  
</section>

<script src="/assets/js/modifyTeam.js"></script>